{
    "name": "lite-front",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "dev": "next",
        "build": "cross-env NODE_ENV=production next build",
        "start": "cross-env NODE_ENV=production next start -p 7171",
        "ts:check": "tsc --noEmit",
        "check": "npm run ts:check && npm run lint",
        "lint": "./node_modules/.bin/eslint . --fix",
        "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
        "update": "npx ncu -u",
        "analyze": "cross-env ANALYZE=true next build"
    },
    "dependencies": {
        "@apollo/client": "^3.7.4",
        "@next/bundle-analyzer": "^13.1.2",
        "@sentry/nextjs": "^7.31.1",
        "@vercel/og": "^0.0.27",
        "apollo3-cache-persist": "^0.14.1",
        "dotenv": "^16.0.3",
        "graphql": "^16.6.0",
        "next": "13.1.2",
        "next-compose-plugins": "^2.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sharp": "^0.31.3",
        "styled-components": "^5.3.6"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^3.2.3",
        "@graphql-codegen/cli": "2.16.4",
        "@graphql-codegen/schema-ast": "^2.6.1",
        "@graphql-codegen/typescript": "2.8.7",
        "@graphql-codegen/typescript-operations": "2.5.12",
        "@graphql-codegen/typescript-react-apollo": "3.3.7",
        "@jetbrains/eslint-config": "^5.4.1",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "cross-env": "^7.0.3",
        "eslint": "8.32.0",
        "eslint-config-next": "^13.1.2",
        "eslint-plugin-react": "^7.32.1",
        "eslint-plugin-simple-import-sort": "^9.0.0",
        "eslint-plugin-sonarjs": "^0.18.0",
        "npm-check-updates": "^16.6.2",
        "typescript": "4.9"
    }
}
