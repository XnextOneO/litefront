{
    "name": "lite-front",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "cross-env NODE_ENV=production next build",
        "start:dev": "next",
        "start:prod": "cross-env NODE_ENV=production npx env-cmd --silent next start",
        "ts:check": "tsc --noEmit",
        "lint": "./node_modules/.bin/eslint .",
        "lint:fix": "./node_modules/.bin/eslint . --fix",
        "check": "npm run ts:check && npm run lint",
        "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
        "update": "npx ncu -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps",
        "analyze": "cross-env ANALYZE=true next build"
    },
    "dependencies": {
        "@apollo/client": "^3.7.10",
        "@next/bundle-analyzer": "^13.2.4",
        "@sentry/nextjs": "^7.42.0",
        "@vercel/og": "^0.4.0",
        "apollo3-cache-persist": "^0.14.1",
        "dotenv": "^16.0.3",
        "env-cmd": "^10.1.0",
        "graphql": "^16.6.0",
        "next": "13.2.4",
        "next-compose-plugins": "^2.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sharp": "^0.31.3",
        "styled-components": "^5.3.8"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^4.0.1",
        "@graphql-codegen/cli": "3.2.2",
        "@graphql-codegen/schema-ast": "^3.0.1",
        "@graphql-codegen/typescript": "3.0.2",
        "@graphql-codegen/typescript-operations": "3.0.2",
        "@graphql-codegen/typescript-react-apollo": "3.3.7",
        "@jetbrains/eslint-config": "^5.4.1",
        "@types/node": "^18.15.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "cross-env": "^7.0.3",
        "eslint": "8.35.0",
        "eslint-config-next": "^13.2.4",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-comments": "^1.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-no-secrets": "^0.8.9",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-security": "^1.7.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-sonarjs": "^0.18.0",
        "eslint-plugin-unicorn": "^46.0.0",
        "npm-check-updates": "^16.7.12",
        "prettier": "^2.8.4",
        "ts-node": "^10.9.1",
        "typescript": "4.9"
    }
}
